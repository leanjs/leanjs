{
  "name": "create-micro-frontends",
  "version": "0.4.0",
  "description": "Cli for creating a LeanJS micro-frontends project",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "author": "Alex Lobera <alex@leanjs.com>",
  "bin": {
    "create-micro-frontends": "./dist/bin/run.js"
  },
  "repository": {
