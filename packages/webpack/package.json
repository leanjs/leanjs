{
  "name": "@leanjs/webpack",
  "version": "0.21.4",
  "description": "Webpack plugins for LeanJS micro-apps",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "author": "Alex Lobera <alex@leanjs.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leanjs/leanjs.git",
    "directory": "packages/webpack"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "del-cli dist",
    "copy:assets": "copyfiles -f src/index.html dist",
    "transpile": "tsc --outDir dist --project ./tsconfig.json",
    "build": "yarn transpile && yarn copy:assets",
    "test": "jest"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@leanjs/cli": "^0.7.34",
    "@leanjs/core": "^0.25.0",
    "chalk": "^4.1.2",
    "fast-glob": "^3.2.11",
    "html-webpack-plugin": "^5.5.0",
    "webpack-virtual-modules": "^0.4.3"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1"
  },
  "peerDependencies": {
    "webpack": "^5.72.0"
  },
  "keywords": [
    "webpack",
    "microfrontends",
    "modular monolith",
    "micro-frontends",
    "plugin",
    "host",
    "remote",
    "module federation"
  ],
  "publishConfig": {
    "access": "public"
  }
}
