{
  "name": "@leanjs/root",
  "version": "0.0.0",
  "author": "Alex Lobera <alex@leanjs.com>",
  "private": true,
  "description": "Tools for building maintainable and performant micro-frontends.",
  "scripts": {
    "----------------------CI TOOLS----------------------": ".",
    "ci": "run-s ci:version ci:publish",
    "ci:version": "HUSKY=0 yarn lerna version --ignore-changes 'e2e/**' --yes --include-merged-tags --create-release github",
    "ci:publish": "yarn lerna publish from-package --yes --no-verify-access --ignore-changes 'e2e/**'",
    "----------------------BUILDING----------------------": ".",
    "prebuild": "del-cli **/dist !**/node_modules/**/dist",
    "build": "lerna run build",
    "----------------------LINTING----------------------": ".",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "check-types": "tsc --noEmit",
    "----------------------TESTING----------------------": ".",
    "test": "lerna run test",
    "start:all:e2e": "turbo run start:e2e --filter=@leanjs/e2e-test-*",
    "test:e2e": "yarn workspace @leanjs/e2e-tests test:all:e2e",
    "----------------------RUNNING----------------------": ".",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*",
    "e2e/test-subjects/*",
    "e2e/tests",
    "website"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@swc/core": "^1.2.142",
    "@swc/jest": "^0.2.17",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^5.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-dom": "^4.0.0",
    "lerna": "^5.5.1",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.3",
    "turbo": "^1.5.1",
    "typescript": "^4.8.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,jsx,css,md}": "prettier --write"
  },
  "dependencies": {}
}
