{
  "name": "@leanjs/root",
  "version": "0.0.0",
  "author": "Alex Lobera <alex@leanjs.com>",
  "private": true,
  "description": "Tools for building maintainable and performant micro-frontends.",
  "scripts": {
    "----------------------CI TOOLS----------------------": ".",
    "ci": "run-s ci:divergence ci:version ci:publish",
    "ci:divergence": "git push -u origin main",
    "ci:version": "HUSKY=0 yarn lerna version --yes --include-merged-tags --create-release github --conventional-commits --message 'chore: publish'",
    "ci:publish": "yarn lerna publish from-package --yes",
    "----------------------BUILDING----------------------": ".",
    "prebuild": "del-cli **/dist !**/node_modules/**/dist",
    "build": "lerna run build",
    "----------------------LINTING----------------------": ".",
    "lint": "eslint .",
    "lint:fix": "lint:ts --fix",
    "check-types": "tsc --noEmit",
    "----------------------RUNNING----------------------": ".",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@swc/core": "^1.2.142",
    "@swc/jest": "^0.2.17",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.12.0",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^5.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-dom": "^4.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,jsx,css,md}": "prettier --write"
  }
}
